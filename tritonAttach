#!/bin/bash

PIN_BIN_PATH=/home/skiidk/pemu/plugins/Triton/../../../pin.sh
PINTOOL_PATH=/home/skiidk/pemu/plugins/Triton/src/tracer/pin/libpintool.so

if [ -z "$1" ]
  then
    echo "You need to specify a script"
    echo "Syntax: ./triton <your_script.py> <target pid>"
    exit
fi

if [ -z "$2" ]
  then
    echo "You need to specify a target pid"
    echo "Syntax: ./triton <your_script.py> <target pid>"
    exit
fi

LD_BIND_NOW=1 $PIN_BIN_PATH -pid $2 -ifeellucky -t $PINTOOL_PATH -script $1

